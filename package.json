{
  "name": "vscode-ocaml-reason-format",
  "displayName": "vscode-ocaml-reason-format",
  "author": "Rusty Key <mail@stfoo.ru> (https://github.com/rusty-key)",
  "publisher": "rustykey",
  "description": "Formatters for OCaml and Reason code",
  "repository": {
    "type": "git",
    "url": "git@github.com:rusty-key/vscode-ocaml-reason-format.git"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:ocaml",
    "onLanguage:reason"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "ocaml",
      "aliases": ["OCaml"],
      "extensions": [".ml", ".mli"]
    }, {
      "id": "reason",
      "aliases": ["Reason"],
      "extensions": [".re", ".rei"]
    }],
    "configuration": {
      "type": "object",
      "title": "Formatter configuration",
      "properties": {
        "ocaml-reason-format.ocamlformat": {
          "type": "string",
          "default": "ocamlformat",
          "description": "The path to the `ocamlformat` binary."
        },
        "ocaml-reason-format.refmt": {
          "type": "string",
          "default": "refmt",
          "description": "The path to the `refmt` binary."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  }
}
